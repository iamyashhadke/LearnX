rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user matches the document ID
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
      
      // Subcollection: Student Progress
      match /student_progress/{progressId} {
        allow read, write: if isOwner(userId);
      }
    }

    // Test Attempts collection (kept global as per existing code structure, 
    // but secured so users can only create their own attempts)
    match /testAttempts/{attemptId} {
      allow read: if isAuthenticated();
      // Allow create if authenticated and userId in data matches auth.uid
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      // Prevent updates/deletes to preserve history
      allow update, delete: if false; 
    }
  }
}